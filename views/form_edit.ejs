<html>
<head>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Kufam:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
</head>
<body>

<%- include("partials/header"); %>
<div class="container">
    <div class="row">
        <br><br>
        <div class="col-md-5">
            <a class="btn btn-info" style="width: 100%;font-size: 35px;" href="/superuser">Add new Tutorial</a>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <a class="btn btn-info" style="width: 100%;font-size: 35px;" href="/superuser/tables">Edit Tutorials</a>
        </div>
    </div>
    <br><br>
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <% Object.keys(tutorials).forEach(function(key){ %>
    <% tutorial=tutorials[key]; %>

    
    <form method="POST" action="/superuser/edit/<%= tutorial.id %>">
        <input type="number" name="likes" value="<%= tutorial.likes %>" hidden>
        <div class="form-group">
            Title
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="title" value="<%= tutorial.title %>" placeholder="Title">
        </div>
        <div class="form-group">
            Link
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="link" value="<%= tutorial.embedded %>" placeholder="Link">
        </div>
        <div class="form-group">
            Section
        </div>
        <div class="form-group">
            <select class="form-control" name="section">
                <option value="webdev-nodejs">Web Development - NodeJS</option>
                <option value="webdev-react">Web Development - React</option>
                <option value="data_structures">Data Structures</option>
                <option value="algorithms">Algorithms</option>
            </select>
        </div>
        <div class="ui buttons" style="position: relative; left: 30%;">
            <a class="ui button" href="/superuser/tables">Cancel</a>
            <div class="or"></div>
            <input  class="ui positive button" type="submit">
        </div>
        
    </form>
    <% }); %>
    </div>
    <div class="col-md-3"></div>
    </div>
</div>

<%- include("partials/footer"); %>



