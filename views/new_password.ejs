<html>
<head>
    <title>CODEIITA</title>
    <link rel="icon" href="/images/codiita.png" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Kufam:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <style>
        body{
            background-color: #B61924;
        }
        .mid{
            transform: translate(25px,250px);
            padding: 35px 30px 10px 30px;
            border: 3px solid #EEEEEE;
            border-radius: 10px;
            background-color: #EEEEEE;
        }
        #particles-js {
            position: fixed;
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            top: 0;
            z-index: -1;
        }
    </style>
</head>
<body >
<%- include("partials/header"); %>
<div class="body-particles">
  <div id="particles-js"></div>  
<div class="container">
    
    <div class="col-md-4"></div>
    <div class="col-md-4 mid">
        <form action="/new_password/<%= username %>" method="POST">
            <div class="form-group">
                <h2 style="transform: translate(40px,-10px);">SET NEW PASSWORD<br></h2>
                <input class="form-control" type="password" name="password" placeholder="New Password">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="confirm_password" placeholder="Confirm Password">
            </div>
            <div class="form-group" style="transform: translate(85px,7px);">
                <input type="submit" class="btn btn-primary"  value="Save new Password">
            </div>
        </form>
        
    </div>
    <div class="col-md-4"></div>
    
</div>
</div>
<script type="text/javascript" src="/javascript/particles.js"></script>
    <script type="text/javascript" src="/javascript/app.js"></script>
<%- include("partials/footer"); %>