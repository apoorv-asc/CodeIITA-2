<html>
<head>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Kufam:wght@600&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>
<body>
<%- include("partials/header"); %>

<div class="container">
    <div class="jumbotron">
        <h1>Edit Blog</h1>
    </div>

    <% Object.keys(blog).forEach(function(key){  %>
    <% blg=blog[key]; %>

    <% }); %>
    
    <form onsubmit="success()" action="/blogs/update/<%= blg.id %>" method="POST">
        <input type="text" name="type" value="link" hidden>
        <input type="text" name="author" value="<%= user %>" hidden>
        <input type="text" name="likes" value="<%= blg.likes %>" hidden>
        <div class="form-group">
            <h3>Title</h3>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" value="<%= blg.title %>" name="title" placeholder="Title">
        </div>
        <div class="form-group">
            <h3>Link</h3>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="link" value="<%= blg.link %>" placeholder="Link to a pdf file preferably in Google Drive">
        </div>
        <div class="form-group">
            <h3>Small Introduction</h3>
        </div>
        <div class="form-group">
            <textarea  type="text" name="body" rows="10" cols="160" placeholder="Small Intro"><%= blg.body %></textarea>
        </div>
        <input type="submit">
    </form>
    
<script>
function success(){
    swal({
  icon: "success",
});
}
</script>
    
<%- include("partials/footer"); %>