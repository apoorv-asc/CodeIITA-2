<body>

<%- include("partials/header"); %>
<div class="container">
    <div class="row">
        <br><br>
        <div class="col-md-5">
            <a class="btn btn-info" style="width: 100%;font-size: 35px;" href="/superuser">Add new Tutorial</a>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <a class="btn btn-info" style="width: 100%;font-size: 35px;" href="/superuser/tables">Edit Tutorials</a>
        </div>
    </div>
    <br><br>
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <form method="POST" action="/superuser">
        <div class="form-group">
            ID
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="id" value="0" placeholder="ID">
        </div><div class="form-group">
            Title
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="title" placeholder="Title">
        </div>
        <div class="form-group">
            Link
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="link" placeholder="Link">
        </div>
        <div class="form-group">
            Section
        </div>
        <div class="form-group">
            <select class="form-control" name="section">
                <option value="webdev-nodejs">Web Development - NodeJS</option>
                <option value="webdev-react">Web Development - React</option>
                <option value="data_structures">Data Structures</option>
                <option value="algorithms">Algorithms</option>
            </select>
        </div>
        <input type="submit">
    </form>
</div>
    <div class="col-md-3"></div>
</div>

